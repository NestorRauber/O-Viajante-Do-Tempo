	 funcao pre_historia(){
	    	inteiro dinossauro, dente
         
          
	     escreva("[1] Correr\n")
	     escreva("[2] Esconder\n")
	     escreva("[3] Atacar\n")
	     escreva("[4] Mexer no relógio\n\n")

	        faca {leia(dinossauro)
	              limpa()
	        	     escolha(dinossauro){

		          caso 1: escreva("Lucas começa a correr para sobreviver")
		                  AgurdLimpe(3000)
		                  escreva("Mas o dinossauro corre mais rapido que Lucas")
		                  AgurdLimpe(3200)
		     	          vida=0
		     	          morte()
		     	        
		     	pare
		     	caso 2: escreva("Ele se esconde atrás de uma rocha proxima. Existe uma chance de sobreviver")
		     	        AgurdLimpe(4900)
		     	        inteiro sobrevRocha = Util.sorteia(1, 2)
		     	        se(sobrevRocha==1){
		     	        	escreva("Felizmente o dinossauro não vê ele")
		     	        	AgurdLimpe(3500)
		     	        	escreva("Ele decide então sair do período jurassico")
		     	          AgurdLimpe(3300)
		     	          escreva("Com sucesso dessa vez, ele gira o ponteiro em sentido horário")
		     	          AgurdLimpe(3700)
		     	     
		     	        	
		     	        }
		     	        senao{
		     	        	escreva("Lucas fecha os olhos, e torce para que ele não tenha visto")
		     	        	AgurdLimpe(3700)
		     	        	escreva(".")
	                         Util.aguarde(1000)
	                         escreva(".")
	                         Util.aguarde(1000)
	                         escreva(".")
	                         AgurdLimpe(1000)
		     	          vida=0
		     	          morte()
		     	       
		     	        	
		     	        }
		     	pare
		     	caso 3: se(lanca == 1){
		     		     escreva("Ele tem uma lança e uma chance")
		     	          AgurdLimpe(3200)
		     	          escreva("ELE ARREMESSA A LANÇA")
		     	          AgurdLimpe(2500)
		     	          escreva(".")
	                         Util.aguarde(1000)
	                         escreva(".")
	                         Util.aguarde(1000)
	                         escreva(".")
	                         AgurdLimpe(1000)
                           
	                         escreva("A lança crava no olho")
	                         AgurdLimpe(2500)

	                         escreva("Em seguida o dinossauro cai morto no chão ")
	                         AgurdLimpe(3000)

	                         escreva("Será que Lucas deve arrancar o dente do dinossauro, para ter como um troféu?\n\n")
	                         escreva("[1] Pegar a presa\n")
	                         escreva("[2] Não pegar\n\n")
	                         leia(dente)
	                         limpa()
	                         escolha(dente){
	                         	caso 1: escreva("\"Se eu pegar a lança talvez consiga retirar a presa dele\"\n")
	                         	AgurdLimpe(3500)

	                         	escreva("\"ISSO!!!\"")
	                         	AgurdLimpe(2000)
	                         	trofeu++
			                    pare
			                    caso 2: escreva("\"Para que isso? não sou um homem das cavernas\"")
			                    AgurdLimpe(3500)
			                    pare
		                         }
		     	        
		     	          escreva("Ele decide então sair do período jurassico")
		     	          AgurdLimpe(3300)

		     	          escreva("Com sucesso dessa vez, ele gira o ponteiro em sentido horário")
		     	          AgurdLimpe(3700)
		     	        }
		     	        senao{
		     	        	escreva("O que Lucas vai atacar? Ele não tem nada")
		     	          AgurdLimpe(3000)
		     	          vida=0
		     	          morte()
		     	        }
		     	pare
		     	caso 4: escreva("Lucas gira o ponteiro, e vai para um momento onde o dinossuro ainda não estava ali")
		     	        AgurdLimpe(5000)

		     	        escreva("Ele decide então sair do período jurassico")
		     	        AgurdLimpe(3300)

		     	        escreva("Com sucesso dessa vez, ele gira o ponteiro em sentido horário")
		     	        AgurdLimpe(3700)
		     	pare
		     	caso contrario: escreva("Por favor, não seja um homem das cavernas\n")
		     	                 
		     	pare
		          }
	        	
	        }enquanto(dinossauro < 1 ou dinossauro > 4)
            
	      
            
	       
            
	  }

	  funcao egito(){
      inteiro farao
      inteiro congelados

	  	escreva("Ele vai para um deserto. Egito antigo especificamente")
	  	AgurdLimpe(4600)

	  	escreva("Sem estar desesperado, Lucas confere seu relógio novamente")
	  	AgurdLimpe(4500)

	  	escreva("Desta vez a data marcada era diferente")
	  	AgurdLimpe(4000)

	  	escreva("Não era exata")
	    AgurdLimpe(3200)

      escreva("1279 a.C")
      AgurdLimpe(3200)

      escreva("\"Onde estou agora?\"")
      AgurdLimpe(3700)

      escreva("Outra vez ele é pego de surpresa")
      AgurdLimpe(3900)

      escreva("Alguém lhe acerta na cabeça")
      AgurdLimpe(3900)
       
      escreva("Quando acorda, está em uma cela")
      AgurdLimpe(3900)

       escreva("Para sair daquela situação, o técnico decide girar o relógio...")
      AgurdLimpe(4700)

       escreva("MAS ESPERA!")
      AgurdLimpe(3200)

       escreva("O relógio sumiu")
      AgurdLimpe(3400)

        escreva("Ele grita por ajuda, mas ninguém aparece")
      AgurdLimpe(4000)

       escreva("Então, dois guardas aparecem e levam ele")
      AgurdLimpe(4000)

       escreva("Lucas é jogado na frente do faraó")
      AgurdLimpe(3900)

       escreva("O faraó questiona Lucas")
      AgurdLimpe(3700)

       escreva("Sem entender o que disse, o viajante decide...\n\n")

       escreva("[1] Fugir\n")
       escreva("[2] Se explicar\n")
       escreva("[3] Roubar uma arma\n")
       escreva("[4] Desenhar\n\n")

       faca{
           
        leia(farao)
        limpa()
        
          escolha(farao){
          	
           caso 1: inteiro fuga = Util.sorteia(1, 3)

           se(fuga!=1){
                 escreva("Ele decide fugir")
                 AgurdLimpe(3000)
                 
                 escreva("Confiante, ele empurra o guarda a sua esquerda")
                 AgurdLimpe(4100)
                 
                 escreva("Corre sem olhar para trás")
                AgurdLimpe(3100)
                
                escreva("E quando Lucas vira o corredor")
                AgurdLimpe(4000)
                
                escreva("Se depara com alguns tesouros em uma sala")
                AgurdLimpe(3000)
                
                escreva("E la está, seu relógio em cima de uma mesa")
                AgurdLimpe(3000)
                
                escreva("Quando o viajante vai pegar o relógio")
                AgurdLimpe(3000)
                
                escreva("Um guarda espeta uma lança por trás, bem em sua barriga")
                AgurdLimpe(3000)
                
                escreva("Por um momento, com lagrimas no rosto")
                AgurdLimpe(3000)
                
                escreva("Ele pensa como tudo aquilo poderia ter acontecido para ele morrer alí")
                AgurdLimpe(5000)
                
                vida=0
		     	          morte()
		 }
		     	          senao{
		     	          	escreva("Ele decide fugir")
                                    AgurdLimpe(3000)
                 
                                    escreva("Confiante, ele empurra o guarda a sua esquerda")
                                     AgurdLimpe(4100)
                 
                                    escreva("Corre sem olhar para trás")
                                     AgurdLimpe(3100)
                
                                    escreva("E quando Lucas vira o corredor")
                                     AgurdLimpe(4000)
                
                                    escreva("Se depara com alguns tesouros em uma sala")
                                     AgurdLimpe(3000)
                
                                    escreva("E la está, seu relógio em cima de uma mesa")
                                     AgurdLimpe(3000)

                                    escreva("Ele pega o relógio e gira rapidamente")
                                     AgurdLimpe(3000)

                                   retorne
                              }
                              
           pare
           caso 2: escreva("Ele decide se explicar")
                 AgurdLimpe(3000)
                 
                 escreva("Lucas fala que não é desse tempo, e que pode viajar entre eles")
                AgurdLimpe(4200)
                
                escreva("Sem entender nada, o faraó ordena que levem-o")
                AgurdLimpe(4000)
                
                escreva("Jogam ele na cela novamente")
                AgurdLimpe(3000)
                
                escreva("Então o pobre rapaz fica preso pelo resto de sua vida")
                AgurdLimpe(4100)
                
                vida=0
		     	          morte()
           pare
           caso 3: escreva("Ele decide roubar a arma do guarda")
                 AgurdLimpe(3000)
                 
                 escreva("Ligeramente ele pega a lança")
                 AgurdLimpe(3000)
                 
                 escreva("Mas talvez tudo aquilo tenha sido inútil para ele")
                AgurdLimpe(4200)
                
                escreva("Pois logo o-cercam")
                AgurdLimpe(3000)
                
                escreva("Os guardas retiram a arma de sua mão, e o-estabilizam")
                AgurdLimpe(4200)
                
                escreva("O faraó se levanta")
                AgurdLimpe(3000)
                
                escreva("Pega sua espada")
                AgurdLimpe(3000)
                escreva("E finca no peito de Lucas")
                AgurdLimpe(3500)
                
                vida=0
		     	          morte()


           pare
           caso 4: escreva("Ele decide desenhar")
                 AgurdLimpe(3000)
                 
                 escreva("Fazendo sinais de desenhar, o faraó entrega uma pedra")
                 AgurdLimpe(4200)
                 
                 escreva("Mesmo que parecendo ser mudo, Lucas começa a desenhar o relógio no chão")
                 AgurdLimpe(5000)
                 
                 escreva("O faraó ordena que os guardas tracam o objeto")
                AgurdLimpe(4200)
                
                escreva("Assim que o rapaz pega o relógio")
                AgurdLimpe(3700)
                
                escreva("Ao invés de girar o ponteiro, ele tenta algo novo")
                AgurdLimpe(4200)
                
                escreva("Ele apenas mantém o dedo precionado no ponteiro")
                AgurdLimpe(4200)
                
                escreva("Mesmo que arriscado ele consegue executar com sucesso seu plano")
                AgurdLimpe(4400)
                
                escreva("Todos a sua volta estavam congelados no tempo")
                AgurdLimpe(4200)
                
                escreva("Sendo assim, ele engana o imperador de qualquer coisa que ele esperace")
                AgurdLimpe(5000)
                
                escreva("Podendo agora fazer o que quiser no seu tempo")
                AgurdLimpe(4200)
                
               
                
                
                faca{
                     escreva("Ele...\n\n")
                escreva("[1] se vinga do faraó\n")
                escreva("[2] se vinga dos guardas\n")
                escreva("[3] volta para o seu tempo\n")
                escreva("[4] tenta algo novo\n\n")
                    
                    leia(congelados)
                	limpa()
                	escolha(congelados){
                    caso 1:escreva("Ele decide matar o faraó")
                    AgurdLimpe(3500)
                    escreva("Assim ele pega uma das lanças dos guardas e finca no imperador")
                    AgurdLimpe(4000)
                    mudancaEgito++
                    
                    pare
                    
                    caso 2:escreva("Ele decide matar os guardas")
                    AgurdLimpe(3500)
                    escreva("Assim ele pega uma das lanças dos guardas e finca em todos eles")
                    AgurdLimpe(4000)
                    mudancaEgito = 2 
                    
                    pare
                    
                    caso 3:escreva("Ele decide voltar para o seu tempo")
                    AgurdLimpe(3700)
                    escreva("Ele gira o relógio na tentativa de ir para seu tempo atual")
                    AgurdLimpe(4000)
                    mudancaEgito = 3
                    pare
                    
                    caso 4:escreva("Ele decide levar o faraó para outro tempo")
                    AgurdLimpe(4000)
                    escreva("Ele agarra no braço do faraó, e com sua outra mão gira o relógio")
                    AgurdLimpe(4000)
                    mudancaEgito = 4
                    pare
                    
                    caso contrario:escreva("Ele decide ficar congelado no tempo. Não seja um idiota e escolha algo")
                    AgurdLimpe(4500)
                    }
                }enquanto(congelados<1 ou congelados>4)

		
                

           pare
           caso contrario: escreva("Não seja deselegante, jogue o jogo como gente")
           pare
         }
       }enquanto(farao < 1 ou farao > 4)
       



      

      
     }


     funcao vikins(){
	inteiro nordico 
	inteiro veneno
	inteiro velho

	escreva("Avançando no tempo, agora Lucas se encontra em uma taverna")
	AgurdLimpe(5000)

	se(mudancaEgito == 4){
     escreva("Lucas discretamente se afasta do faraó, e deixa ele lá")
     AgurdLimpe(5000)
	}

	escreva("O sobrevivente acabava esbarrando em um homem forte")
	AgurdLimpe(5000)

	escreva("Surpreendentemente o relógio havia feito um \"upgrade\"")
	AgurdLimpe(5000)

	escreva("Agora podendo entender o que o homem dizia")
	AgurdLimpe(5000)

	escreva("Lucas descobre que as pessoas no bar são nórdicos")
	AgurdLimpe(5000)

	escreva("Conferindo seu relógio, ele vê que a data era apenas o ano. 793")
	AgurdLimpe(5000)

     escreva("O grandalhão avisa o viajante que lá fora está muito frio")
	AgurdLimpe(5000)
	  
	   
	     se(trofeu == 1){
	     }
	     
	 se(trofeu==1){
	 	faca{
	 		escreva("Ele diz ter um manto feito de pele de lobo, mas Lucas terá que comprar dele\n\n")
	          escreva("[1] Não tenho nada para trocar\n")
	          escreva("[2] Entregar o relógio\n")
	 	     escreva("[3] Entregar o dente\n\n")	
	 	    	 leia(nordico)
	 	    	 limpa()

                escolha(nordico){
                caso 1:escreva("\"Me desculpe, não tenho nada para trocar\"")
                AgurdLimpe(5000)

                escreva("\"Mas por favor, me dê o manto\"")
                AgurdLimpe(5000)

			escreva("\"Seu tolo, não é assim que as coisas funcionam por aqui\", disse o bárbaro")
			AgurdLimpe(5000)

			escreva("\"Mas pode fazer algo para mim\"")
			AgurdLimpe(5000)

			escreva("\"Sem ele perceber, você terá que colocar este veneno na bebida daquele velho ali\"")
			AgurdLimpe(5000)

			escreva("\"Caso consiga, o manto é seu\"")
			AgurdLimpe(5000)

                       faca{escreva("O que você ira fazer?\n\n")
                            escreva("[1]Colocar\n")
                            escreva("[2]Não colocar\n\n")
                            leia(veneno)
                            limpa()
                            escolha(veneno){
                            	caso 1:escreva("Cuidadosamente o rapaz se aproximou do senhor")
							AgurdLimpe(3500)

							escreva("Lucas sentou na mesa onde o velho estava")
							AgurdLimpe(3500)

							escreva("E logo colocou o veneno no copo")
							AgurdLimpe(3500)

							escreva("O senhor apenas percebeu Lucas sentado do seu lado. E puxou papo...")
							AgurdLimpe(4500)

							escreva("\"E aí jovem?\"")
